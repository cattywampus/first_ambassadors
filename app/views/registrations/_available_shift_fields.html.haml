.nested-fields
  .field
    .form-group
      .col-offset-sm-3.col-sm-3
        ==#{f.text_field :starts_at, placeholder: 'Start date/time', class: 'form-control'}
      .col-sm-1
        %p.center-block ..to..
      .col-sm-3
        = f.text_field :ends_at, placeholder: 'End date/time', class: 'form-control'
      .col-sm-1
        = link_to_remove_association "Remove", f
